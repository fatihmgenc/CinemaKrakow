@model IEnumerable<CinemaKrakow.Data.Models.Movie>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" >
    <h1>Aviable Movies at Cinema Krakow</h1>
    <div>
        <p>There are @Model.Count() Movies for now.</p>
    </div>
       

</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
    <div id="myCarousel" class="carousel slide" data-ride="carousel" >
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                string tempAct = "item";
                if (item.Name == "The Godfather")
                {
                    tempAct = "item active";
                }
            <div class="@tempAct">
                <img class="img-responsive center-block" src=@item.PosterUrl alt=@item.Name height="500" width="500">
                <div class="carousel-caption">
                    <h3>@item.Name</h3>
                </div>

                @using (Html.BeginForm("detail", "Home", FormMethod.Get))
                {
                    <button name="id" class="btn btn-primary btn-lg btn-block" type="submit" value="@item.Id">Go to Film Details</button>
                }
            </div>

            }

        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div> 
</div>

